 #include<iostream>
using namespace std;
int main() {
    int arr[]={37,55,1,2,44};
    int n=sizeof(arr)/sizeof(arr[0]);
    int min=arr[0],max=arr[0];
    for(int i=0;i<n;i++) {
        if(arr[i]<min) {
            min=arr[i];
        }
        if(arr[i]>max) {
            max=arr[i];
        }
    }
    cout<<"mini"<<min<<endl;
     cout<<"maxi"<<max<<endl;
     return 0;
}
Using a loop to find min and max
